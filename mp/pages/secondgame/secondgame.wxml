<view class="main">
  <view class="page__hd">
    <view class="page__title">一秒钟有多长？</view>
    <view class="page__desc">你能精确地按出一秒钟吗？</view>
  </view>
  <view class="page__bd">
    <text class="result">{{result}}</text>
    <view class="btn" id="btn" catchtouchstart="start" catchtouchend="end">
      <icon type="circle" size="45" color="orange" />
    </view>
  </view>
  <view class="page__ft">
    <button bindtap="back">返回</button>
  </view>
</view>